<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_home_banner_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_backgroup">

        <ImageView
            android:id="@+id/integrate_return_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/z_z_topbar_ico_back_white"/>


        <TextView
            android:id="@+id/lunch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="中餐"
            android:textColor="#FFFDA69A"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/lunch_line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_alignLeft="@id/lunch_tv"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/lunch_tv"
            android:background="#FFF"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/breakfast_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/lunch_tv"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/lunch_tv"
            android:text="早餐"
            android:textColor="#FFFDA69A"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/breakfast_line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_alignLeft="@id/breakfast_tv"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/breakfast_tv"
            android:background="#FFF"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/supper_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/lunch_tv"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/lunch_tv"
            android:text="晚餐"
            android:textColor="#FFFDA69A"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/supper_line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_alignLeft="@id/supper_tv"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/supper_tv"
            android:background="#FFF"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/integrate_share_iv"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/z_z_topbar_ico_share"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>