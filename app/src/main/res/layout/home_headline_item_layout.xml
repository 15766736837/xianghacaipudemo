<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_headline_iv"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"/>

    <TextView
        android:id="@+id/home_headline_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/home_headline_iv"
        android:textColor="#FF3F3F3F"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/home_headline_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/home_headline_iv"
        android:layout_alignBottom="@id/home_headline_iv"
        android:textSize="10dp"
        android:textColor="#FFA7A7A7"/>

    <TextView
        android:id="@+id/home_headline_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="7dp"
        android:layout_alignBottom="@id/home_headline_iv"
        android:textSize="10dp"
        android:textColor="#FFA7A7A7"/>
</RelativeLayout>