<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_indent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_backgroup">

        <LinearLayout
            android:id="@+id/myindent_return_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/z_z_topbar_ico_back_white"/>
        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/myindent_tabs"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:stl_defaultTabTextColor="#888888"
        app:stl_defaultTabTextHorizontalPadding="15dp"
        app:stl_defaultTabTextSize="15sp"

        app:stl_distributeEvenly = "true"
        app:stl_indicatorColor="#f00"

        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorThickness="2dp"
        app:stl_underlineThickness="1dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/myindent_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
