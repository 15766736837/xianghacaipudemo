<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/c_white_bg_title"
              android:orientation="vertical"
              android:padding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/find_detail_content_head_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/find_detail_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/find_detail_content_head_icon"
            android:text="昵称"
            android:textColor="@color/tab_text_normal"
            android:textSize="@dimen/sp_14"/>


        <TextView
            android:id="@+id/find_detail_content_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/find_detail_content_name"
            android:layout_below="@id/find_detail_content_name"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.5"
            android:text="正文"
            android:textColor="@color/c_black_text"
            android:textSize="@dimen/sp_16"/>

        <TextView
            android:id="@+id/find_detail_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/find_detail_content_content"
            android:layout_below="@id/find_detail_content_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="time"/>

        <Button
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_alignBottom="@id/find_detail_content_time"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_toLeftOf="@+id/find_detail_content_btn_comment"
            android:background="@drawable/more"
            />

        <Button
            android:id="@+id/find_detail_content_btn_comment"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_alignBottom="@id/find_detail_content_time"
            android:layout_alignParentRight="true"
            android:background="@drawable/comment"
            />

    </RelativeLayout>


</LinearLayout>