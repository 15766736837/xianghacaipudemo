<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_concern"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a520it.xianghacaipu.activity.ConcernActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_backgroup">

        <LinearLayout
            android:id="@+id/setting_return_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/z_z_topbar_ico_back_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="13sp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/cence_title"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/concern_fons_tv"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/color_titel"
                android:text="粉丝"
                android:textColor="#000"
                android:textSize="12sp"
                android:clickable="true"
                android:gravity="center"/>

            <TextView
                android:id="@+id/concern_concern_tv"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:clickable="true"
                android:background="@drawable/color_titel"
                android:text="关注"
                android:textColor="#000"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>


    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/concern_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
