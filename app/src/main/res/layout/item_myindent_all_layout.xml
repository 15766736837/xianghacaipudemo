<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
            android:background="#FFFFFE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/item_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/mall_buycommod_commod_merchant_iv"/>

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="香哈自营品牌店"
            android:textColor="#3A3A3A"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_iv"/>

        <TextView
            android:id="@+id/item_wait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待付款"
            android:layout_marginRight="10dp"
            android:textColor="#FF7D6B"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#888888"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_sp_iv"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dome"/>

        <TextView
            android:id="@+id/item_sp_name"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高颜值又实用焗饭4件套"
            android:textSize="13sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#888888"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView

            android:id="@+id/item_sp_fk"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付款 :"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/item_sp_money"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 89.00"
            android:layout_toRightOf="@id/item_sp_fk"
            android:textColor="#FF7D6B"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/item_outpay"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="去支付"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="@drawable/button_back"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/item_return"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="取消订单"
            android:layout_toLeftOf="@id/item_outpay"
            android:textSize="12sp"
            android:textColor="#9A9A9A"
            android:background="@drawable/button_stork"
            android:layout_marginRight="10dp"/>

   </RelativeLayout>



</LinearLayout>