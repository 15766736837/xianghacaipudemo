<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_collect"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_backgroup">

        <ImageView
            android:id="@+id/collect_return_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/z_z_topbar_ico_back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的收藏"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/collect_souxun_iv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/z_z_topbar_ico_so"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F5F5F5"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/collect_food_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜谱"
            android:textColor="@drawable/color_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/collect_concern_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="美食帖"
            android:textColor="@drawable/color_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/collect_topline_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="头条"
            android:textColor="@drawable/color_text"
            android:textSize="12sp"/>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/collect_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
