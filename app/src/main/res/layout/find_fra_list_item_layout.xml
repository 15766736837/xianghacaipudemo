<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/find_fra_lv_item_head_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/find_fra_lv_item_name"
            android:textColor="@color/tab_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/find_fra_lv_item_head_icon"
            android:text="昵称"
            android:textSize="@dimen/sp_14"/>

        <ImageView
            android:id="@+id/find_fra_lv_item_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/find_fra_lv_item_name"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/find_fra_lv_item_name"
            android:src="@drawable/z_z_ico_level_01"/>

        <TextView
            android:id="@+id/find_fra_lv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/find_fra_lv_item_name"
            android:layout_below="@id/find_fra_lv_item_name"
            android:layout_marginTop="1dp"
            android:textSize="@dimen/sp_12"
            android:text="时间"/>

        <LinearLayout
            android:id="@+id/find_fra_lv_item_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_lv_item_follow_selected"
            android:gravity="center"
            android:clickable="true"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/dish_follow_a"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textColor="#fb6753"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <TextView
            android:id="@+id/find_fra_lv_item_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/find_fra_lv_item_head_icon"
            android:layout_marginTop="10dp"
            android:text="正文"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"
            android:textColor="@color/tab_text_normal"
            android:textSize="@dimen/sp_16"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/find_fra_lv_item_show_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/find_fra_lv_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#558e8d8d"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/z_circle_item_location_iv"/>

        <TextView
            android:id="@+id/find_fra_lv_item_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/circle_browse"/>

            <TextView
                android:id="@+id/find_fra_lv_item_count_care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1235"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/z_quan_home_body_ico_message"/>

            <TextView
                android:id="@+id/find_fra_lv_item_count_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1235"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/z_quan_home_body_ico_good"/>

            <TextView
                android:id="@+id/find_fra_lv_item_count_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1235"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>